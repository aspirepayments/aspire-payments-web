{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,

    "target": "ES2020",
    "lib": ["ES2020"],
    "strict": true,
    "noEmit": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}